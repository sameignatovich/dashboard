{
  "name": "dashboard",
  "version": "0.3.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build; tar Jcvf dist.tar.xz dist",
    "lint": "vue-cli-service lint",
    "deploy": "scp dist.tar.xz nginx@vm1:/home/nginx/www/dashboard.big.wtf/; ssh -t nginx@vm1 'cd /home/nginx/www/dashboard.big.wtf; tar xvf dist.tar.xz; rm -rf dist.tar.xz public; mv dist public'"
  },
  "dependencies": {
    "@meforma/vue-toaster": "^1.2.2",
    "@popperjs/core": "^2.10.2",
    "axios": "^0.24.0",
    "bootstrap": "^5.1.3",
    "bootstrap-icons": "^1.6.1",
    "core-js": "^3.6.5",
    "dateformat": "^5.0.2",
    "register-service-worker": "^1.7.1",
    "vue": "^3.0.0",
    "vue-axios": "^3.3.7",
    "vue-router": "^4.0.0-0",
    "vuex": "^4.0.0-0"
  },
  "resolutions": {
    "@vue/devtools-api": "6.0.0-beta.20.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-plugin-pwa": "~4.5.0",
    "@vue/cli-plugin-router": "~4.5.0",
    "@vue/cli-plugin-vuex": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "@vue/compiler-sfc": "^3.0.0",
    "@vue/eslint-config-airbnb": "^5.0.2",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.7.2",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-vue": "^7.0.0",
    "lint-staged": "^9.5.0",
    "sass": "^1.26.5",
    "sass-loader": "^8.0.2",
    "vue-cli-plugin-compression": "~1.1.5"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "@vue/airbnb"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {}
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,vue}": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
